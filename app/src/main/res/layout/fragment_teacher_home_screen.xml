<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TeacherHomeScreenFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="5"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:fontFamily="sans-serif-medium"
            android:gravity="center|center_vertical"
            android:text="Dashboard"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/infoTv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/gotocoursesBtn"
            android:layout_width="220dp"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:text="Go to Courses"
            android:layout_gravity="center"
            app:cornerRadius="100dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/gotoScheduleBtn"
            android:layout_width="220dp"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:text="Go to Schedule"
            android:layout_gravity="center"
            app:cornerRadius="100dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/gotogenerateqrBtn"
            android:layout_width="220dp"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:text="Go to QR Generator"
            android:layout_gravity="center"
            app:cornerRadius="100dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/gotostatisticsBtn"
            android:layout_width="220dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:text="Go to Statistics"
            app:cornerRadius="100dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/gotologoutBtn"
            android:layout_width="220dp"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:text="Logout"

            app:backgroundTint="#e73e3a"
            android:layout_gravity="center"
            app:cornerRadius="100dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.15"
            android:src="@drawable/signupart"
            android:scaleType="fitXY"
            />


    </LinearLayout>

</layout>